{
  # Production configuration with HTTPS
}

fredav-videoparty.duckdns.org {
  encode zstd gzip

  header {
    # Basic security headers only (no CORS - handled by Node.js)
    X-Content-Type-Options "nosniff"
    Referrer-Policy "no-referrer"
    Permissions-Policy "autoplay=(), fullscreen=(), microphone=()"
    # HSTS for production
    Strict-Transport-Security "max-age=31536000; includeSubDomains"
  }

  # Reverse proxy to local Node server
  reverse_proxy localhost:8080
}
